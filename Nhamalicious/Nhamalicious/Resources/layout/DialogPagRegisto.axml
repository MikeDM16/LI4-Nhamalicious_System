<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#DEDEDC"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pagregisto">
    <EditText
        android:id="@+id/txtNome"
        android:layout_width="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:background="#F8EFF8F3"
        android:hint="Nome"
        android:textColor="#333639"
        android:textColorHint="#333639"
        android:padding="16dp" />
    <EditText
        android:id="@+id/txtIdade"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/txtNome"
        android:background="#F8EFF8F3"
        android:hint="Idade"
        android:textColor="#333639"
        android:textColorHint="#333639"
        android:padding="16dp" />
    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#F8EFF8F3"
        android:hint="Username"
        android:textColor="#333639"
        android:textColorHint="#333639"
        android:layout_below="@+id/txtNome"
        android:padding="16dp" />
    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#F8EFF8F3"
        android:hint="Email"
        android:textColor="#333639"
        android:textColorHint="#333639"
        android:padding="16dp"
        android:layout_below="@+id/txtUsername" />
    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword"
        android:gravity="top"
        android:background="#F8EFF8F3"
        android:hint="Password"
        android:textColor="#333639"
        android:textColorHint="#333639"
        android:padding="16dp"
        android:layout_below="@+id/txtEmail" />
    <EditText
        android:id="@+id/txtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="top"
        android:inputType="textPassword"
        android:background="#F8EFF8F3"
        android:hint="Confirmar Password"
        android:textColor="#333639"
        android:textColorHint="#333639"
        android:padding="16dp"
        android:layout_below="@+id/txtPassword" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:id="@+id/layoutBotoes"
        android:layout_below="@+id/txtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="25px"
        android:minHeight="25px">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/radioGroup1">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:checked="true"
                android:text="Registar como Cliente"
                android:id="@+id/rbCliente" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Registar como ProprietÃ¡rio"
                android:id="@+id/rdProp" />
        </RadioGroup>
        <Button
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/btnRegisto"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:text="Registe-se!"
            android:background="@drawable/LogInStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>